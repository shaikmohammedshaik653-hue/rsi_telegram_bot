name: Daily RSI Alerts

on:
  schedule:
    - cron: "50 3 * * 1-5"   # Runs 9:20 AM IST Mon-Fri (adjust if needed)
  workflow_dispatch:         # allows manual run from Actions tab

jobs:
  run-alert:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.12"

      - name: Install dependencies
        run: pip install -r requirements.txt

      - name: Run RSI Alert Script
        env:
          BOT_TOKEN: "${{ 8224175137:AAGSEigqVKaWhWhF3djMdKNs7om7NPmSkQM }}"
          CHAT_ID:   "${{ 1596671103 }}"
          WATCH_LIST: "${{ Reliance.ns.hdfc.ns.icici.ns }}"
        run: python rsi_alert.py
